#!/usr/bin/env php
<?php

$autoloadPath1 = __DIR__ . '/../../autoload.php';
$autoloadPath2 = __DIR__ . '/../vendor/autoload.php';
if (file_exists($autoloadPath1)) {
    require_once($autoloadPath1);
} else {
    require_once($autoloadPath2);
}

use function Php\Project\Lvl2\Functions\gendiff;
use function Php\Project\Lvl2\Functions\getFilesPath;
use function Php\Project\Lvl2\Functions\getDataByExtension;
use function Php\Project\Lvl2\Functions\checkForEmptyness;

$doc = <<<DOC
Generate diff

Usage:
    gendiff (-h|--help)
    gendiff (-v|--version)
    gendiff [--format <fmt>] <firstFile> <secondFile>

Options:
    -h --help                     Show this screen
    -v --version                  Show version    
    --format <fmt>                Report format [default: stylish]

DOC;
// <argument> ARGUMENT command -o --option [optional elements] (required elements) (mutually exclusive | elements)

$args = Docopt::handle($doc, ['version'=>'gendiff 0.1']);

$pathsToFiles = getFilesPath();

[$pathToFile1, $pathToFile2] = $pathsToFiles;

$file1 = getDataByExtension($pathToFile1);
$file2 = getDataByExtension($pathToFile2);
$output = checkForEmptyness($file1, $file2);

if ($output) {
    $diff = $output;
} else {
    $diff = gendiff($file1, $file2);
}

print_r($diff);
